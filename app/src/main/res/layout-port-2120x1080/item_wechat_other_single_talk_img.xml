<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <com.zhy.android.percent.support.PercentRelativeLayout
        style="@style/wechatPreview_2120_1080">

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/wechatOtherAvatar"
            style="@style/wechatPreviewHeaderOther_2120_1080"/>
        <com.zhy.android.percent.support.PercentLinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/wechatOtherAvatar"
            android:layout_alignTop="@+id/wechatOtherAvatar"
            android:orientation="vertical">
            <TextView
                android:id="@+id/sWechatNickNameTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="啦啦啦"
                android:textSize="13sp"
                android:paddingTop="2dp"
                android:paddingBottom="2dp"
                android:paddingLeft="4dp"
                android:textColor="@color/wechatLightGray"
                android:visibility="gone"/>
            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/wechatOtherIv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="fitStart"
                android:adjustViewBounds="true"
                android:src="@mipmap/timg"
                app:riv_corner_radius="5dip"/>
        </com.zhy.android.percent.support.PercentLinearLayout>


    </com.zhy.android.percent.support.PercentRelativeLayout>

</com.zhy.android.percent.support.PercentRelativeLayout>