<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/wechatSimulatorBg">
    <com.zhy.android.percent.support.PercentRelativeLayout
        android:id="@+id/titleLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_heightPercent="13.14%w">

        <com.coorchice.library.SuperTextView
            android:id="@+id/mWechatScreenShotPreviewBackTv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="bottom|center"
            app:layout_widthPercent="13.14%w"
            app:stv_isShowState="true"
            app:stv_state_drawable="@drawable/wechat_back_black"
            app:stv_pressBgColor="@color/wechatLightGray" />
        <app.jietuqi.cn.wechat.wechatfont.WechatChar2TextView
            android:id="@+id/mWechatScreenShotPreviewNickNameTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="微信红包"
            android:textColor="@android:color/black"
            android:textSize="17sp"
            android:gravity="center"
            android:layout_toRightOf="@+id/mWechatScreenShotPreviewBackTv"
            android:layout_alignTop="@+id/mWechatScreenShotPreviewBackTv"
            android:layout_alignBottom="@+id/mWechatScreenShotPreviewBackTv"
            android:textStyle="bold"/>

        <ImageView
            android:id="@+id/mWechatScreenShotPreviewMessageFreeIv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/wechat_message_free_black"
            android:layout_toRightOf="@+id/mWechatScreenShotPreviewNickNameTv"
            android:layout_centerVertical="true"
            app:layout_marginLeftPercent="1.22%w"
            android:visibility="gone"/>
        <ImageView
            android:id="@+id/mWechatScreenShotPreviewEarModeIv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/wechat_ear_mode"
            android:layout_toRightOf="@+id/mWechatScreenShotPreviewMessageFreeIv"
            android:layout_centerVertical="true"
            app:layout_marginLeftPercent="1.22%w"
            android:visibility="gone"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/wechat_more_black"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/normalPadding"/>

    </com.zhy.android.percent.support.PercentRelativeLayout>
    <TextView
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/wechatLineNarrow"
        android:background="#e4e4e4"
        android:layout_below="@+id/titleLayout"/>
    <ImageView
        android:id="@+id/mWechatScreenShotPreviewRecyclerViewBgIv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/line"
        android:layout_above="@+id/mWechatScreenShotPreviewBottomLayout"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:visibility="gone"/>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/mWechatScreenShotPreviewRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layoutManager="android.support.v7.widget.LinearLayoutManager"
        android:orientation="vertical"
        android:layout_below="@+id/titleLayout"
        android:layout_above="@+id/mWechatScreenShotPreviewBottomLayout"
        android:paddingBottom="@dimen/normalPadding"
        android:clipToPadding="false"/>

    <com.zhy.android.percent.support.PercentRelativeLayout
        android:id="@+id/mWechatScreenShotPreviewBottomLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_heightPercent="15.48%w"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:background="#f1f1f1">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/wechatLineNarrow"
            android:background="#e4e4e4"
            android:layout_alignParentTop="true"/>
        <ImageView
            android:id="@+id/mWechatScreenShotPreviewVoiceAndKeyBoardIv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/wechat_input_voice"
            app:layout_marginLeftPercent="3.44%w"
            app:layout_marginRightPercent="1.93%w"
            app:layout_marginTopPercent="2.16%w"
            app:layout_marginBottomPercent="2.16%w"
            android:layout_centerVertical="true"/>

        <LinearLayout
            android:id="@+id/mWechatScreenShotPreviewContentLayout"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            app:layout_widthPercent="63.44%w"
            android:layout_toRightOf="@+id/mWechatScreenShotPreviewVoiceAndKeyBoardIv"
            app:layout_marginRightPercent="1.93%w"
            android:layout_centerVertical="true"
            android:orientation="horizontal"
            app:layout_marginTopPercent="2.16%w"
            app:layout_marginBottomPercent="2.16%w">
            <TextView
                android:id="@+id/mWechatScreenShotPreviewHoldDownTheTalkTv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="按住 说话"
                android:background="@drawable/rounded_edittext"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="@dimen/wechat17"
                android:paddingRight="@dimen/normalPaddingHalf"
                android:visibility="gone"/>

            <EditText
                android:id="@+id/mWechatScreenShotPreviewContentEt"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/rounded_edittext"
                android:gravity="center_vertical"
                android:textCursorDrawable="@drawable/wechat_cursor_color"
                android:paddingLeft="@dimen/normalPadding"
                android:paddingRight="@dimen/normalPadding"/>
        </LinearLayout>

        <ImageView
            android:id="@+id/mWechatScreenShotPreviewEmojiIv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/wechat_input_emoticon"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/mWechatScreenShotPreviewContentLayout"
            android:layout_alignTop="@+id/mWechatScreenShotPreviewVoiceAndKeyBoardIv"
            android:layout_alignBottom="@+id/mWechatScreenShotPreviewVoiceAndKeyBoardIv"
            app:layout_marginRightPercent="1.93%w"/>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/mWechatScreenShotPreviewEmojiIv"
            android:gravity="center"
            app:layout_marginRightPercent="1.93%w"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true">
            <ImageView
                android:id="@+id/mWechatScreenShotPreviewMoreIv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/wechat_input_more"/>
            <TextView
                android:id="@+id/mWechatScreenShotPreviewSendTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/green_solid_wechat_preview"
                android:text="发送"
                android:textColor="@color/white"
                android:gravity="center"
                android:visibility="gone"/>
        </RelativeLayout>
    </com.zhy.android.percent.support.PercentRelativeLayout>
    <com.zhy.android.percent.support.PercentRelativeLayout
        android:id="@+id/mHonebaoAnimationBgLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#99FFFFFF"
        android:clickable="true"
        android:visibility="gone">
        <com.zhy.android.percent.support.PercentRelativeLayout
            android:id="@+id/mHonebaoAnimationLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/wechat_hongbao_frame_new"
            android:orientation="horizontal"
            android:layout_centerHorizontal="true"
            app:layout_heightPercent="123%w"
            app:layout_widthPercent="73.77%w"
            app:layout_marginTopPercent="32.8%w">

            <com.zhy.android.percent.support.PercentLinearLayout
                android:id="@+id/layout3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                app:layout_marginTopPercent="36.5%w">
                <com.makeramen.roundedimageview.RoundedImageView
                    android:id="@+id/mRedpacketAvatarIv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/head_default"
                    app:riv_oval="false"
                    app:riv_corner_radius="2dp"
                    app:layout_widthPercent="8.1%w"
                    app:layout_heightPercent="8.1%w"
                    app:layout_marginRightPercent="3.53%w"
                    android:scaleType="centerCrop"
                    android:adjustViewBounds="true"/>

                <TextView
                    android:id="@+id/mRedpacketNickNameTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:text="董腾 ~ 淘宝返利的红包"
                    android:textColor="#ffcba0"/>
            </com.zhy.android.percent.support.PercentLinearLayout>

            <TextView
                android:id="@+id/mRedpacketMsgTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/layout3"
                android:textColor="#FEE0B5"
                android:textSize="22sp"
                app:layout_marginTopPercent="2.77%w" />

            <ImageView
                android:id="@+id/mOpenIv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/wechat_hongbao_open"
                android:layout_centerHorizontal="true"
                app:layout_marginBottomPercent="17.2%w"
                android:layout_alignParentBottom="true"/>
            <ImageView
                android:id="@+id/mAnimationIv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                app:layout_marginBottomPercent="17.2%w"
                android:layout_alignParentBottom="true"
                android:visibility="gone"/>

        </com.zhy.android.percent.support.PercentRelativeLayout>
        <ImageView
            android:id="@+id/mCloseHongbaoIv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/hongbao_colse"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/mHonebaoAnimationLayout"
            app:layout_marginTopPercent="6.15%w"/>

    </com.zhy.android.percent.support.PercentRelativeLayout>
</com.zhy.android.percent.support.PercentRelativeLayout>