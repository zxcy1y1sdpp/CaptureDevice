<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <com.zhy.android.percent.support.PercentRelativeLayout
        style="@style/wechatPreview_2120_1080">
        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/wechatMyTransferReceivedAvatarIv"
            style="@style/wechatPreviewHeaderMy_2120_1080"/>
            <com.zhy.android.percent.support.PercentRelativeLayout
                android:id="@+id/wechatMyTransferReceivedLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_hongbao_c"
                android:layout_toLeftOf="@+id/wechatMyTransferReceivedAvatarIv"
                android:layout_alignTop="@+id/wechatMyTransferReceivedAvatarIv"
                app:layout_heightPercent="21.29%w"
                app:layout_widthPercent="55.94%w">

                <com.zhy.android.percent.support.PercentRelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_marginTopPercent="3%w"
                    app:layout_marginLeftPercent="4.31%w">
                    <ImageView
                        android:id="@+id/tagIv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/wechat_transfer_receive"
                        android:adjustViewBounds="true"
                        android:layout_centerVertical="true"/>
                    <TextView
                        android:id="@+id/tagView1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignTop="@+id/tagIv"
                        android:layout_toRightOf="@+id/tagIv"
                        android:text="已收钱"
                        android:textColor="@color/white"
                        android:lines="1"
                        android:ellipsize="end"
                        android:textSize="@dimen/wechatNormalTextSize2"
                        android:layout_marginLeft="@dimen/normalPadding"
                        android:textStyle="bold"/>

                    <app.jietuqi.cn.wechat.wechatfont.WechatChar6TextView
                        android:id="@+id/wechatMyTransferReceivedMoneyTv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tagView1"
                        android:layout_toRightOf="@+id/tagIv"
                        android:text="¥123.00"
                        android:textColor="@color/white"
                        android:textSize="@dimen/wechatLittleTextSize"
                        android:layout_alignLeft="@+id/noticeTv"
                        android:layout_marginLeft="@dimen/normalPadding"/>
                </com.zhy.android.percent.support.PercentRelativeLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/tagIv"
                    android:layout_toRightOf="@+id/tagIv"
                    android:text="微信转账"
                    android:textColor="@color/wechatGray"
                    android:textSize="@dimen/wechatLittle2TextSize"
                    app:layout_marginLeftPercent="4.31%w"
                    android:layout_alignParentBottom="true"/>
            </com.zhy.android.percent.support.PercentRelativeLayout>
    </com.zhy.android.percent.support.PercentRelativeLayout>
</com.zhy.android.percent.support.PercentRelativeLayout>