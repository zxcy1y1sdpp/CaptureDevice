<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/overallBg">
    <include layout="@layout/include_base_overall_top_black"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <android.support.v7.widget.RecyclerView
                android:id="@+id/mSimulatorSystemMessageGroupRolesRv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layoutManager="android.support.v7.widget.GridLayoutManager"
                app:spanCount="4"
                android:padding="@dimen/normalPadding"
                android:clipToPadding="false"/>

            <EditText
                android:id="@+id/mSimulatorSystemMessageEt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lines="5"
                android:background="@color/white"
                android:layout_margin="@dimen/normalPadding"/>

            <TextView
                android:id="@+id/mSystemMsg0Tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="你邀请“”加入了群聊 撤销"
                android:background="@drawable/blue_round_cornor"
                android:textColor="@color/white"
                android:padding="@dimen/normalPadding"
                android:layout_marginLeft="@dimen/normalPadding"
                android:layout_marginRight="@dimen/normalPadding"
                android:tag="你撤回了一条消息 重新编辑"/>
            <TextView
                android:id="@+id/mSystemMsg1Tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="“”通过扫描你分享的二维码加入群聊"
                android:background="@drawable/blue_round_cornor"
                android:textColor="@color/white"
                android:padding="@dimen/normalPadding"
                android:layout_marginLeft="@dimen/normalPadding"
                android:layout_marginRight="@dimen/normalPadding"
                android:layout_marginTop="@dimen/normalPadding"/>
            <TextView
                android:id="@+id/mSystemMsg2Tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="你通过扫描二维码加入群聊，群聊参与人还有"
                android:background="@drawable/blue_round_cornor"
                android:textColor="@color/white"
                android:padding="@dimen/normalPadding"
                android:layout_marginLeft="@dimen/normalPadding"
                android:layout_marginRight="@dimen/normalPadding"
                android:layout_marginTop="@dimen/normalPadding"
                android:tag="以上是打招呼的内容"/>
            <TextView
                android:id="@+id/mSystemMsg3Tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="你将“”移出了群聊"
                android:background="@drawable/blue_round_cornor"
                android:textColor="@color/white"
                android:padding="@dimen/normalPadding"
                android:layout_marginLeft="@dimen/normalPadding"
                android:layout_marginRight="@dimen/normalPadding"
                android:layout_marginTop="@dimen/normalPadding"
                android:tag="如果陌生人主动添加你为朋友，请谨慎核实对方身份"/>
            <TextView
                android:id="@+id/mSystemMsg4Tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="你被“”移出群聊"
                android:background="@drawable/blue_round_cornor"
                android:textColor="@color/white"
                android:padding="@dimen/normalPadding"
                android:layout_marginLeft="@dimen/normalPadding"
                android:layout_marginRight="@dimen/normalPadding"
                android:layout_marginTop="@dimen/normalPadding"
                android:tag="如果陌生人主动添加你为朋友，请谨慎核实对方身份"/>
            <TextView
                android:id="@+id/mSystemMsg5Tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="你修改群名为“”"
                android:background="@drawable/blue_round_cornor"
                android:textColor="@color/white"
                android:padding="@dimen/normalPadding"
                android:layout_marginLeft="@dimen/normalPadding"
                android:layout_marginRight="@dimen/normalPadding"
                android:layout_marginTop="@dimen/normalPadding"
                android:tag="如果陌生人主动添加你为朋友，请谨慎核实对方身份"/>
            <TextView
                android:id="@+id/mSystemMsg6Tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="“”修改群名为“”"
                android:background="@drawable/blue_round_cornor"
                android:textColor="@color/white"
                android:padding="@dimen/normalPadding"
                android:layout_marginLeft="@dimen/normalPadding"
                android:layout_marginRight="@dimen/normalPadding"
                android:layout_marginTop="@dimen/normalPadding"
                android:tag="如果陌生人主动添加你为朋友，请谨慎核实对方身份"/>
            <TextView
                android:id="@+id/mSystemMsg7Tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="“”与群里其他人都不是微信朋友关系，请注意隐私安全"
                android:background="@drawable/blue_round_cornor"
                android:textColor="@color/white"
                android:padding="@dimen/normalPadding"
                android:layout_marginLeft="@dimen/normalPadding"
                android:layout_marginRight="@dimen/normalPadding"
                android:layout_marginTop="@dimen/normalPadding"
                android:tag="如果陌生人主动添加你为朋友，请谨慎核实对方身份"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>