<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/overallBg">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <include
                android:id="@+id/layout1"
                layout="@layout/include_base_overall_top"/>

            <LinearLayout
                android:id="@+id/layout2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/normalPadding"
                android:layout_below="@+id/layout1"
                android:background="@color/white"
                android:layout_marginTop="@dimen/normalPadding">
                <TextView
                    android:id="@+id/mAlipayNickNameTv"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="欢迎您:13914800206"
                    android:layout_weight="4"
                    android:gravity="center_vertical"
                    android:textSize="18sp"/>
                <TextView
                    android:id="@+id/mEditInfoTv"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="[信息修改]"
                    android:layout_weight="2"
                    android:gravity="center_horizontal|bottom"/>
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/layout3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/corner_linear"
                android:layout_below="@+id/layout2"
                android:layout_marginTop="@dimen/normalPadding"
                android:padding="@dimen/normalPadding2"
                android:layout_margin="@dimen/normalPadding">

                <RelativeLayout
                    android:id="@+id/layout4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/mCashTv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="¥9999"
                        android:textSize="30sp"
                        android:layout_centerVertical="true"
                        android:textColor="#F97439"/>

                    <com.coorchice.library.SuperTextView
                        android:id="@+id/mWithdrawNowTv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@+id/sOverallProjectMarketAvatarIv"
                        android:layout_alignParentRight="true"
                        android:gravity="bottom|center"
                        android:paddingLeft="15dp"
                        android:paddingTop="8dp"
                        android:paddingRight="15dp"
                        android:paddingBottom="8dp"
                        android:text="立刻提现"
                        android:textColor="@color/white"
                        android:textSize="18sp"
                        app:layout_marginLeftPercent="1%w"
                        app:layout_marginRightPercent="4.27%w"
                        app:stv_corner="20dp"
                        app:stv_solid="#4AA9EB" />

                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/layout5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_below="@+id/layout4"
                    android:layout_marginTop="@dimen/normalPadding2">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="累计提现金额："
                        android:textColor="#586682"
                        android:textStyle="bold"/>
                    <TextView
                        android:id="@+id/mAlreadyWithdrawTv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2019元"
                        android:textColor="#F97439"
                        android:textStyle="bold"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_alignTop="@+id/layout5"
                    android:layout_alignParentRight="true">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="到期时间："
                        android:textColor="#586682"
                        android:textStyle="bold"/>
                    <TextView
                        android:id="@+id/mEndTimeTv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2019-04-05"
                        android:textColor="#F97439"
                        android:textStyle="bold"/>
                </LinearLayout>

            </RelativeLayout>

            <LinearLayout
                android:id="@+id/layout6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/layout3"
                android:gravity="center_horizontal">
                <ImageView
                    android:id="@+id/mClientIv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/agency_1"/>
                <ImageView
                    android:id="@+id/mEarningIv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/agency_2"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/layout6"
                android:gravity="center_horizontal">
                <ImageView
                    android:id="@+id/mWithdrawIv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/agency_3"/>
                <ImageView
                    android:id="@+id/OperateIv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/agency_4"/>
            </LinearLayout>

            <ImageView
                android:id="@+id/mServerIv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/agency_server"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"/>
        </RelativeLayout>
    </ScrollView>
</LinearLayout>