<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <com.zhy.android.percent.support.PercentRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_marginBottomPercent="2.8%w">
        <ImageView
            android:id="@+id/mAlipayVoiceMyAvatarIv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_heightPercent="11%w"
            app:layout_widthPercent="11%w"
            app:layout_marginRightPercent="2.16%w"
            app:layout_marginLeftPercent="1.67%w"
            android:layout_alignParentRight="true"
            android:src="@drawable/head_default"
            android:scaleType="centerCrop"/>
        <LinearLayout
            android:id="@+id/mAlipayVoiceMyLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/alipay_chat_text_a"
            android:layout_toLeftOf="@+id/mAlipayVoiceMyAvatarIv"
            android:layout_alignTop="@+id/mAlipayVoiceMyAvatarIv"
            android:layout_alignBottom="@+id/mAlipayVoiceMyAvatarIv"
            android:gravity="center_vertical|right">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/alipay_chat_voice1" />
        </LinearLayout>
        <com.zhy.android.percent.support.PercentLinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/normalPaddingHalf"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/mAlipayVoiceMyLayout"
            android:layout_alignTop="@+id/mAlipayVoiceMyAvatarIv"
            android:layout_alignBottom="@+id/mAlipayVoiceMyAvatarIv">
            <ImageView
                android:id="@+id/mAlipayVoiceMyAlreadyIv"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/red_point"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="@dimen/normalPaddingHalf"/>
            <TextView
                android:id="@+id/mAlipayVoiceMyLengthTv"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="7"
                android:textColor="@color/wechatVoiceGray"
                android:paddingLeft="@dimen/normalPaddingHalf"
                android:paddingRight="@dimen/normalPaddingHalf"
                android:gravity="center"/>
        </com.zhy.android.percent.support.PercentLinearLayout>
    </com.zhy.android.percent.support.PercentRelativeLayout>
</com.zhy.android.percent.support.PercentRelativeLayout>