        <app.jietuqi.cn.wechat.simulator.widget.CustomPasswordInputView
            android:id="@+id/payDialogPassWordEt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/layout1"
            app:maxCount="6"
            app:devideLineColor="#f4f4f4"
            app:strokeColor="#C3C3C3"
            app:layout_heightPercent="14.68%w"
            app:layout_marginBottomPercent="5.04%w"
            android:layout_alignLeft="@+id/line2"
            android:layout_alignRight="@+id/line2"
            app:layout_marginLeftPercent="5.05%w"
            app:layout_marginRightPercent="5.05%w"
            android:background="@null"/>
    </com.zhy.android.percent.support.PercentRelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_heightPercent="77%w"
        android:layout_alignParentBottom="true"/>
    <app.jietuqi.cn.widget.wechatkeyboard.VirtualKeyboardView
        android:id="@+id/payDialogBanKeyboardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_heightPercent="77%w"
