<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <com.zhy.android.percent.support.PercentRelativeLayout
        android:id="@+id/layout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_marginBottomPercent="2.8%w">
        <ImageView
            android:id="@+id/sAlipayMyTransferAvatarIv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            app:layout_heightPercent="11%w"
            app:layout_widthPercent="11%w"
            app:layout_marginRightPercent="2.16%w"
            app:layout_marginLeftPercent="1.67%w"
            android:scaleType="centerCrop"
            android:src="@drawable/head_default"/>
        <com.zhy.android.percent.support.PercentRelativeLayout
            android:id="@+id/sAlipayMyTransferLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/alipay_chat_transfer_a"
            android:layout_toLeftOf="@+id/sAlipayMyTransferAvatarIv"
            android:layout_alignTop="@+id/sAlipayMyTransferAvatarIv"
            app:layout_heightPercent="26.7%w"
            app:layout_widthPercent="63.87%w">

            <com.zhy.android.percent.support.PercentRelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_marginTopPercent="3.44%w"
                app:layout_marginLeftPercent="4.31%w"
                app:layout_heightPercent="17.68%w">
                <ImageView
                    android:id="@+id/tagIv"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@drawable/alipay_chat_transfer"
                    android:adjustViewBounds="true"/>
                <TextView
                    android:id="@+id/sAlipayMyTransferMoneyTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/tagIv"
                    android:layout_toRightOf="@+id/tagIv"
                    android:text="¥123.00"
                    android:textColor="@color/white"
                    android:textSize="@dimen/wechatNormalTextSize2"
                    android:layout_alignLeft="@+id/sAlipayMyTransferLeaveMessageTv"/>
                <TextView
                    android:id="@+id/sAlipayMyTransferLeaveMessageTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/tagIv"
                    android:layout_toRightOf="@+id/tagIv"
                    android:text="转账给阿郎"
                    android:textColor="@color/white"
                    android:lines="1"
                    android:ellipsize="end"
                    android:textSize="@dimen/wechatLittleTextSize"
                    android:layout_marginLeft="@dimen/normalPadding"
                    android:alpha="0.7"/>


            </com.zhy.android.percent.support.PercentRelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/sAlipayLeaveMessage"
                app:layout_marginLeftPercent="4.31%w"
                android:layout_alignBottom="@+id/tagIv"
                android:layout_toRightOf="@+id/tagIv"
                android:layout_alignParentBottom="true">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="转账"
                    android:textColor="#C5C5C5"
                    android:textSize="@dimen/wechatNormalTextSize2"
                    android:layout_centerVertical="true"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/alipay_chat_pay"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"/>
            </RelativeLayout>
        </com.zhy.android.percent.support.PercentRelativeLayout>
    </com.zhy.android.percent.support.PercentRelativeLayout>
    <com.zhy.android.percent.support.PercentLinearLayout
        android:id="@+id/sAlipayReceiveRedPacketLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/gray_round_cornor"
        android:orientation="horizontal"
        app:layout_marginTopPercent="2.8%w"
        app:layout_marginBottomPercent="2.8%w"
        app:layout_heightPercent="9.25%w"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/layout1">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/normalPaddingHalf"
            android:layout_gravity="center_vertical"/>
        <TextView
            android:id="@+id/sAlipayReceiveRedPacketContentTv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="默默转账？"
            android:textColor="@color/white"
            android:textSize="@dimen/wechatNormalTextSize2"
            android:gravity="center_vertical"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="给对方捎句话吧"
            android:textColor="@color/alipayBlueColor"
            android:textSize="@dimen/wechatNormalTextSize2"
            android:gravity="center_vertical"/>
    </com.zhy.android.percent.support.PercentLinearLayout>
</com.zhy.android.percent.support.PercentRelativeLayout>