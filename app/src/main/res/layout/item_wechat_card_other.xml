<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.zhy.android.percent.support.PercentRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_marginTopPercent="1.51%w"
        app:layout_marginBottomPercent="1.51%w">
        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/sWechatCardMyAvatarIv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_heightPercent="11.21%w"
            app:layout_widthPercent="11.21%w"
            app:layout_marginLeftPercent="2.16%w"
            app:layout_marginRightPercent="1.67%w"
            android:src="@drawable/head_default"
            android:scaleType="centerCrop"
            app:riv_corner_radius="5dp"/>

        <com.zhy.android.percent.support.PercentRelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/wechat_card_other"
            app:layout_marginRightPercent="23.78%w"
            android:layout_toRightOf="@+id/sWechatCardMyAvatarIv"
            android:layout_alignTop="@+id/sWechatCardMyAvatarIv">


            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/sWechatCardAvatarIv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/head_default"
                app:layout_heightPercent="18.33%w"
                app:layout_widthPercent="18.33%w"
                app:layout_marginLeftPercent="5.3%w"
                app:layout_marginRightPercent="5.3%w"
                app:layout_marginTopPercent="5%w"
                app:layout_marginBottomPercent="5%w"
                app:riv_oval="false"
                app:riv_corner_radius="5dp"
                android:scaleType="centerCrop"/>

            <TextView
                android:id="@+id/sWechatCardNickNameIv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="sdafsdafsdafsdafsdafsdafsdaf"
                android:layout_toRightOf="@+id/sWechatCardAvatarIv"
                android:layout_alignTop="@+id/sWechatCardAvatarIv"
                android:layout_alignBottom="@+id/sWechatCardAvatarIv"
                android:gravity="center_vertical"
                android:lines="1"
                android:ellipsize="end"
                app:layout_marginRightPercent="7%w"
                android:textSize="@dimen/wechat17"/>

            <com.zhy.android.percent.support.PercentLinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_heightPercent="9.3%w"
                android:layout_below="@+id/sWechatCardAvatarIv"
                android:background="@drawable/corner_wechat_card"
                android:orientation="vertical">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/Line"
                    android:background="@color/wechatLine"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="个人名片"
                    app:layout_marginLeftPercent="5.3%w"
                    android:gravity="center_vertical"
                    android:includeFontPadding="false"
                    android:textSize="11sp"
                    android:textColor="@color/wechatLightGray"/>
            </com.zhy.android.percent.support.PercentLinearLayout>
        </com.zhy.android.percent.support.PercentRelativeLayout>

    </com.zhy.android.percent.support.PercentRelativeLayout>

</com.zhy.android.percent.support.PercentRelativeLayout>