<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentLinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/overallBg"
    android:orientation="vertical">

    <include layout="@layout/include_base_overall_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <com.zhy.android.percent.support.PercentRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_heightPercent="10.4%w"
        android:background="@color/white"
        app:layout_marginTopPercent="3.73%w">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="服务状态"
            android:gravity="center_vertical"
            app:layout_marginLeftPercent="4.27%w"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            app:layout_marginRightPercent="4.27%w">
            <TextView
                android:id="@+id/mProjectPopularizeTopStatusTv"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="未购买"
                android:textColor="#F85A59"
                android:gravity="center"/>
            <!--<TextView
                android:id="@+id/mProjectPopularizeTopLeftTimeTv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="剩余时间："
                android:textColor="#F85A59"
                android:gravity="center"
                android:visibility="gone"/>-->
        </LinearLayout>

    </com.zhy.android.percent.support.PercentRelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/Line"
        android:background="@color/wechatLine"/>

    <com.zhy.android.percent.support.PercentRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_heightPercent="23.73%w"
        android:background="@color/white">

        <ImageView
            android:id="@+id/tagView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/project_popularize_icon"
            android:layout_centerVertical="true"
            app:layout_marginLeftPercent="4.27%w"
            app:layout_marginRightPercent="3.73%w"
            app:layout_widthPercent="15.2%w"
            app:layout_heightPercent="15.2%w"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="列表置顶"
            android:layout_toRightOf="@+id/tagView"
            android:layout_alignTop="@+id/tagView"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="购买后立即生效 , 您的项目将置顶于项目列表 , 到期后自动取消置顶"
            android:layout_toRightOf="@+id/tagView"
            android:layout_alignBottom="@+id/tagView"
            android:textColor="#868686"/>
    </com.zhy.android.percent.support.PercentRelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/Line"
        android:background="@color/wechatLine"/>
    <com.zhy.android.percent.support.PercentRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_heightPercent="10.4%w"
        android:background="@color/white">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="800微币/天"
            android:gravity="center_vertical"
            app:layout_marginLeftPercent="4.27%w"
            android:textColor="#F85A59"/>

        <TextView
            android:id="@+id/mProjectPopularizeTopBuyTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="购买"
            android:textColor="#F85A59"
            android:gravity="center"
            android:layout_alignParentRight="true"
            app:layout_marginRightPercent="4.27%w"
            android:background="@drawable/red_solid_project"
            android:layout_centerVertical="true"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"/>
    </com.zhy.android.percent.support.PercentRelativeLayout>
    <com.zhy.android.percent.support.PercentRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_heightPercent="10.4%w"
        android:background="@color/white"
        app:layout_marginTopPercent="3.73%w">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="服务状态"
            android:gravity="center_vertical"
            app:layout_marginLeftPercent="4.27%w"/>

    </com.zhy.android.percent.support.PercentRelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/Line"
        android:background="@color/wechatLine"/>

    <com.zhy.android.percent.support.PercentRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_heightPercent="23.73%w"
        android:background="@color/white">

        <ImageView
            android:id="@+id/tagView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/project_banner_tuijian"
            android:layout_centerVertical="true"
            app:layout_marginLeftPercent="4.27%w"
            app:layout_marginRightPercent="3.73%w"
            app:layout_widthPercent="15.2%w"
            app:layout_heightPercent="15.2%w"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="轮播图推荐"
            android:layout_toRightOf="@+id/tagView1"
            android:layout_alignTop="@+id/tagView1"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="购买后等待排期 , 您的项目将以焦点图的形式展示在项目市场首页"
            android:layout_toRightOf="@+id/tagView1"
            android:layout_alignBottom="@+id/tagView1"
            android:textColor="#868686"/>
    </com.zhy.android.percent.support.PercentRelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/Line"
        android:background="@color/wechatLine"/>
    <com.zhy.android.percent.support.PercentRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_heightPercent="10.4%w"
        android:background="@color/white">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="请联系下方商务专员进行咨询购买"
            android:gravity="center_vertical"
            app:layout_marginLeftPercent="4.27%w"
            android:textColor="#F85A59"/>
    </com.zhy.android.percent.support.PercentRelativeLayout>

    <com.zhy.android.percent.support.PercentRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_heightPercent="16.53%w"
        android:background="@color/white"
        app:layout_marginTopPercent="3.73%w">

        <ImageView
            android:id="@+id/tagView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/project_zhuanyuan"
            android:layout_centerVertical="true"
            app:layout_marginLeftPercent="4.27%w"
            app:layout_marginRightPercent="3.73%w"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="商务专员"
            android:layout_toRightOf="@+id/tagView2"
            android:layout_alignTop="@+id/tagView2"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="微信：wsyxb999"
            android:layout_toRightOf="@+id/tagView2"
            android:layout_alignBottom="@+id/tagView2"
            android:textColor="#868686"/>

        <com.coorchice.library.SuperTextView
            android:id="@+id/mProjectPopularizeConnectTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="联系"
            android:textColor="@color/white"
            app:stv_corner="30dp"
            app:stv_solid="@color/overallBlue"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/normalPadding"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            app:layout_marginRightPercent="4.27%w"
            android:tag="wsyxb999"/>
    </com.zhy.android.percent.support.PercentRelativeLayout>

</com.zhy.android.percent.support.PercentLinearLayout>