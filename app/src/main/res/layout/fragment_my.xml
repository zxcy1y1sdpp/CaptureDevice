<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentLinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/overallBg">

    <com.zhy.android.percent.support.PercentRelativeLayout
        android:id="@+id/mMyOverallTitleBgLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_heightPercent="14%w"
        android:background="@color/white">

        <TextView
            android:id="@+id/overAllTitleTv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="个人中心"
            android:textSize="@dimen/overall32px"
            android:gravity="center"
            android:layout_centerHorizontal="true"
            android:textColor="@color/overallTextColor"/>

        <TextView
            android:id="@+id/overAllBottomLine"
            android:layout_width="match_parent"
            android:layout_height="@dimen/wechatLineNarrow"
            android:background="@color/overallBg"
            android:layout_alignParentBottom="true"/>
    </com.zhy.android.percent.support.PercentRelativeLayout>

    <!--<include
        layout="@layout/include_base_overall_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />-->
    <com.scwang.smartrefresh.layout.SmartRefreshLayout
        android:id="@+id/mMyRefreshLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:srlEnableLoadMore="false"
        app:srlEnableRefresh="false">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.zhy.android.percent.support.PercentLinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <com.zhy.android.percent.support.PercentRelativeLayout
                    android:id="@+id/mUserInfoLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_heightPercent="23.2%w"
                    android:background="@color/white"
                    app:layout_marginTopPercent="4%w">

                    <com.makeramen.roundedimageview.RoundedImageView
                        android:id="@+id/mAvatarIv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/head_default"
                        app:layout_heightPercent="17.21%w"
                        app:layout_widthPercent="17.21%w"
                        app:riv_border_color="@color/wechatPreviewTitle"
                        app:riv_oval="true"
                        app:riv_corner_radius="75dp"
                        android:scaleType="centerCrop"
                        android:layout_centerVertical="true"
                        app:layout_marginLeftPercent="4.26%w"
                        app:layout_marginRightPercent="3.27%w"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/mAvatarIv"
                        android:layout_alignTop="@+id/mAvatarIv"
                        app:layout_heightPercent="8%w">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="昵称："
                            android:textSize="@dimen/normalTextSize17"
                            android:gravity="center"/>
                        <TextView
                            android:id="@+id/mNickNameTv"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:textSize="@dimen/overall26px"
                            android:gravity="center"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/mAvatarIv"
                        app:layout_heightPercent="8%w"
                        android:textSize="@dimen/overallNormal4"
                        android:layout_alignBottom="@+id/mAvatarIv">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="用户ID："
                            android:textSize="@dimen/overall26px"
                            android:gravity="center"/>
                        <TextView
                            android:id="@+id/mIdTv"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:textSize="@dimen/overall26px"
                            android:gravity="center"/>
                    </LinearLayout>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/right_arrow"
                        android:layout_margin="@dimen/normalPadding"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        app:layout_marginRightPercent="4.64%w"/>
                    <!--<TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="签到送会员"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:background="@drawable/blue_solid2"
                        android:textColor="@color/overallBlue"
                        android:textSize="@dimen/overallNormal4"
                        android:layout_margin="@dimen/normalPadding" />-->
                </com.zhy.android.percent.support.PercentRelativeLayout>

                <com.zhy.android.percent.support.PercentRelativeLayout
                    android:id="@+id/mOpenVipLayout"
                    style="@style/overallMyItem"
                    app:layout_marginTopPercent="5.33%w">

                    <ImageView
                        android:id="@+id/tagView1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/kaitongvip"
                        android:layout_centerVertical="true"
                        app:layout_marginLeftPercent="4.26%w"/>
                    <TextView
                        android:text="开通VIP"
                        style="@style/overallLeftTitle"
                        android:textColor="#FC615A"
                        android:layout_toRightOf="@+id/tagView1"/>
                    <TextView
                        android:id="@+id/mOpenIsVipTv"
                        style="@style/overallMyItemRight"
                        android:text="未开通"
                        android:textColor="@color/overallGray"/>
                </com.zhy.android.percent.support.PercentRelativeLayout>
                <com.zhy.android.percent.support.PercentRelativeLayout
                    android:id="@+id/mWbLayout"
                    style="@style/overallMyItem">

                    <ImageView
                        android:id="@+id/tagView9"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/wodeweibi"
                        android:layout_centerVertical="true"
                        app:layout_marginLeftPercent="4.26%w"/>
                    <TextView
                        android:text="我的微币"
                        style="@style/overallLeftTitle"
                        android:textColor="#FC615A"
                        android:layout_toRightOf="@+id/tagView9"/>
                    <TextView
                        style="@style/overallMyItemRight"
                        android:textColor="@color/overallGray"/>
                </com.zhy.android.percent.support.PercentRelativeLayout>

                <com.zhy.android.percent.support.PercentRelativeLayout
                    android:id="@+id/mAgencyLayout"
                    style="@style/overallMyItem"
                    app:layout_marginTopPercent="5.33%w"
                    app:layout_heightPercent="19.5%w"
                    android:visibility="gone">

                    <ImageView
                        android:id="@+id/tagView11"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/wodeweibi"
                        android:layout_centerVertical="true"
                        app:layout_marginLeftPercent="4.26%w"/>
                    <TextView
                        android:text="代理中心"
                        style="@style/overallLeftTitle"
                        android:textColor="#FC615A"
                        android:layout_toRightOf="@+id/tagView11"/>
                    <TextView
                        style="@style/overallMyItemRight"
                        android:textColor="@color/overallGray"/>
                </com.zhy.android.percent.support.PercentRelativeLayout>
                <com.zhy.android.percent.support.PercentRelativeLayout
                    android:id="@+id/mOpenAgentLayout"
                    style="@style/overallMyItem"
                    android:visibility="gone">
                    <ImageView
                        android:id="@+id/tagView2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/ktdl"
                        android:layout_centerVertical="true"
                        app:layout_marginLeftPercent="4.26%w"/>
                    <TextView
                        android:text="开通代理"
                        style="@style/overallLeftTitle"
                        android:layout_toRightOf="@+id/tagView2"/>
                    <TextView
                        style="@style/overallMyItemRight"/>
                </com.zhy.android.percent.support.PercentRelativeLayout>
                <com.zhy.android.percent.support.PercentRelativeLayout
                    android:id="@+id/mOpenShopLayout"
                    style="@style/overallMyItem"
                    android:visibility="gone">
                    <TextView
                        android:text="开通代理"
                        android:drawableLeft="@mipmap/ktdl"
                        style="@style/overallLeftTitle" />

                    <TextView style="@style/overallMyItemRight"/>
                </com.zhy.android.percent.support.PercentRelativeLayout>

                <com.zhy.android.percent.support.PercentRelativeLayout
                    android:id="@+id/mInviteLayout"
                    app:layout_marginTopPercent="5.33%w"
                    style="@style/overallMyItem">
                    <ImageView
                        android:id="@+id/tagView3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/yqyj"
                        android:layout_centerVertical="true"
                        app:layout_marginLeftPercent="4.26%w"/>
                    <TextView
                        android:text="邀请有奖"
                        style="@style/overallLeftTitle"
                        android:layout_toRightOf="@+id/tagView3"/>

                    <TextView style="@style/overallMyItemRight"
                        android:text="免费获得VIP"
                        android:textColor="@color/overallGray"/>
                </com.zhy.android.percent.support.PercentRelativeLayout>
                <com.zhy.android.percent.support.PercentRelativeLayout
                    android:id="@+id/mMyPublishLayout"
                    style="@style/overallMyItem"
                    app:layout_marginBottomPercent="5.33%w">
                    <ImageView
                        android:id="@+id/tagView4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/wodefabu"
                        android:layout_centerVertical="true"
                        app:layout_marginLeftPercent="4.26%w"/>
                    <TextView
                        android:text="我的发布"
                        style="@style/overallLeftTitle"
                        android:layout_toRightOf="@+id/tagView4"/>

                    <TextView style="@style/overallMyItemRight"/>
                </com.zhy.android.percent.support.PercentRelativeLayout>
                <com.zhy.android.percent.support.PercentRelativeLayout
                    android:id="@+id/mQQGroupLayout"
                    style="@style/overallMyItem">
                    <ImageView
                        android:id="@+id/tagView5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/qqq"
                        android:layout_centerVertical="true"
                        app:layout_marginLeftPercent="4.26%w"/>
                    <TextView
                        android:text="会员QQ群"
                        style="@style/overallLeftTitle"
                        android:layout_toRightOf="@+id/tagView5"/>
                    <TextView
                        android:id="@+id/mQQGroupType"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        style="@style/overallMyItemRight"
                        android:text="824315403"
                        android:textColor="@color/overallGray"/>
                </com.zhy.android.percent.support.PercentRelativeLayout>
                <com.zhy.android.percent.support.PercentRelativeLayout
                    android:id="@+id/mServerHelpLayout"
                    style="@style/overallMyItem">
                    <ImageView
                        android:id="@+id/tagView10"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/lxkf"
                        android:layout_centerVertical="true"
                        app:layout_marginLeftPercent="4.26%w"/>
                    <TextView
                        android:text="客服帮助"
                        style="@style/overallLeftTitle"
                        android:layout_toRightOf="@+id/tagView10"/>
                    <TextView style="@style/overallMyItemRight"/>
                </com.zhy.android.percent.support.PercentRelativeLayout>
                <com.zhy.android.percent.support.PercentRelativeLayout
                    android:id="@+id/mProblemReportLayout"
                    style="@style/overallMyItem">
                    <ImageView
                        android:id="@+id/tagView7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/wtfk"
                        android:layout_centerVertical="true"
                        app:layout_marginLeftPercent="4.26%w"/>
                    <TextView
                        android:text="问题反馈"
                        style="@style/overallLeftTitle"
                        android:layout_toRightOf="@+id/tagView7"/>

                    <TextView style="@style/overallMyItemRight"
                        android:text="有什么想法告诉我们吧"
                        android:textColor="@color/overallGray"/>
                </com.zhy.android.percent.support.PercentRelativeLayout>
                <com.zhy.android.percent.support.PercentRelativeLayout
                    android:id="@+id/mSettingLayout"
                    style="@style/overallMyItem">
                    <ImageView
                        android:id="@+id/tagView8"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/sz"
                        android:layout_centerVertical="true"
                        app:layout_marginLeftPercent="4.26%w"/>
                    <TextView
                        android:text="设置"
                        style="@style/overallLeftTitle"
                        android:layout_toRightOf="@+id/tagView8"/>

                    <TextView style="@style/overallMyItemRight"/>
                </com.zhy.android.percent.support.PercentRelativeLayout>

            </com.zhy.android.percent.support.PercentLinearLayout>
        </ScrollView>
    </com.scwang.smartrefresh.layout.SmartRefreshLayout>
</com.zhy.android.percent.support.PercentLinearLayout>