<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentLinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/overallBg">
    <include
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/include_base_overall_top_black"/>
    <EditText
        android:id="@+id/mSimulatorWechatCreateGroupRedPacketMoneyEt"
        android:hint="输入红包金额"
        style="@style/wechatEdit"
        android:inputType="numberDecimal"
        android:padding="@dimen/normalPadding"/>
    <EditText
        android:id="@+id/mSimulatorWechatCreateGroupRedPacketCountEt"
        android:hint="红包个数"
        style="@style/wechatEdit"
        android:inputType="number"
        android:padding="@dimen/normalPadding"/>
    <EditText
        android:id="@+id/mSimulatorWechatCreateGroupRedPacketReceiveTimeEt"
        android:hint="领完时间（xx秒、xx分钟、xx小时）"
        style="@style/wechatEdit"
        android:padding="@dimen/normalPadding"/>
    <EditText
        android:id="@+id/mSimulatorWechatCreateGroupRedPacketMsgEt"
        android:hint="恭喜发财，大吉大利"
        style="@style/wechatEdit"
        android:padding="@dimen/normalPadding"/>
    <RelativeLayout
        style="@style/wechatItem">
        <TextView
            style="@style/wechatLeftTitle"
            android:text="是否参与红包的领取"/>

        <ImageView
            android:id="@+id/mSimulatorWechatCreateGroupRedPacketJoinReceiveIv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@mipmap/on"
            android:layout_alignParentRight="true"/>

    </RelativeLayout>
</com.zhy.android.percent.support.PercentLinearLayout>