<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:percent="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/sUploadTv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/publish_circle"
        percent:layout_heightPercent="100%w"
        android:scaleType="centerCrop"
        android:adjustViewBounds="true"
        android:layout_margin="@dimen/normalPadding"/>

    <app.jietuqi.cn.widget.VerticalProgressBar
        android:id="@+id/sUploadProgress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        percent:layout_heightPercent="100%w"
        android:layout_margin="@dimen/normalPadding"
        android:visibility="gone"/>
    <ImageView
        android:id="@+id/sUploadDeleteIv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/shanchu"
        android:layout_alignParentRight="true"/>
</com.zhy.android.percent.support.PercentRelativeLayout>