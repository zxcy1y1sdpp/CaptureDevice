<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <com.zhy.android.percent.support.PercentRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_marginTopPercent="1.51%w"
        app:layout_marginBottomPercent="1.51%w">

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/sWechatMyEmojiAvatarIv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_heightPercent="11.21%w"
            app:layout_widthPercent="11.21%w"
            app:layout_marginRightPercent="2.16%w"
            app:layout_marginLeftPercent="1.67%w"
            android:src="@drawable/head_default"
            android:layout_alignParentRight="true"
            app:riv_corner_radius="5dp"/>
        <com.zhy.android.percent.support.PercentLinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/sWechatMyEmojiAvatarIv"
            android:layout_alignTop="@+id/sWechatMyEmojiAvatarIv"
            android:orientation="vertical">
            <TextView
                android:id="@+id/sWechatMyEmojiNickNameTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="啦啦啦"
                android:textSize="13sp"
                android:paddingTop="2dp"
                android:paddingBottom="2dp"
                android:paddingLeft="4dp"
                android:textColor="@color/wechatLightGray"
                android:visibility="gone"/>
            <ImageView
                android:id="@+id/sWechatMyEmojiIv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/wechat_dice_1"
                android:scaleType="fitCenter"/>
        </com.zhy.android.percent.support.PercentLinearLayout>


    </com.zhy.android.percent.support.PercentRelativeLayout>

</com.zhy.android.percent.support.PercentRelativeLayout>