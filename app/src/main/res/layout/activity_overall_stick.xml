<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentLinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/overallBg"
    android:orientation="vertical">

    <include layout="@layout/include_base_overall_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_marginBottomPercent="3.47%w"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/Line"
        android:background="@color/wechatLine"/>
    <com.zhy.android.percent.support.PercentRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_heightPercent="13.6%w"
        android:background="@color/white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            app:layout_marginLeftPercent="4.27%w"
            android:gravity="center_vertical"
            android:text="置顶1小时"/>

        <com.coorchice.library.SuperTextView
            android:id="@+id/mServer1Tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="购买"
            android:textColor="@color/white"
            app:stv_corner="30dp"
            app:stv_solid="#F85A59"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/normalPadding"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            app:layout_marginRightPercent="4.27%w"
            android:tag="wsyxb999"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="20微币"
            android:layout_toLeftOf="@+id/mServer1Tv"
            android:gravity="center_vertical"
            android:textColor="#F85A59"/>
    </com.zhy.android.percent.support.PercentRelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/Line"
        android:background="@color/wechatLine"/>
    <com.zhy.android.percent.support.PercentRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_heightPercent="13.6%w"
        android:background="@color/white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            app:layout_marginLeftPercent="4.27%w"
            android:gravity="center_vertical"
            android:text="置顶3小时"
            android:textColor="@color/overallBlue"/>

        <com.coorchice.library.SuperTextView
            android:id="@+id/mServer2Tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="购买"
            android:textColor="@color/white"
            app:stv_corner="30dp"
            app:stv_solid="#F85A59"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/normalPadding"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            app:layout_marginRightPercent="4.27%w"
            android:tag="wsyxb999"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="80微币"
            android:layout_toLeftOf="@+id/mServer2Tv"
            android:gravity="center_vertical"
            android:textColor="#F85A59"/>
    </com.zhy.android.percent.support.PercentRelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/Line"
        android:background="@color/wechatLine"/>
    <com.zhy.android.percent.support.PercentRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_heightPercent="13.6%w"
        android:background="@color/white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            app:layout_marginLeftPercent="4.27%w"
            android:gravity="center_vertical"
            android:text="置顶24小时"
            android:textColor="#F85A59"/>

        <com.coorchice.library.SuperTextView
            android:id="@+id/mServer3Tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="购买"
            android:textColor="@color/white"
            app:stv_corner="30dp"
            app:stv_solid="#F85A59"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/normalPadding"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            app:layout_marginRightPercent="4.27%w"
            android:tag="wsyxb999"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="990微币"
            android:layout_toLeftOf="@+id/mServer3Tv"
            android:gravity="center_vertical"
            android:textColor="#F85A59"/>
    </com.zhy.android.percent.support.PercentRelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/Line"
        android:background="@color/wechatLine"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="置顶3小时，名称将以蓝色显示"
        app:layout_marginBottomPercent="3.47%w"
        app:layout_marginTopPercent="3.47%w"
        app:layout_marginLeftPercent="4.27%w"
        android:textColor="@color/wechatLightGray"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="置顶24小时，名称将以红色显示并优先推荐"
        app:layout_marginLeftPercent="4.27%w"
        android:textColor="@color/wechatLightGray"/>
</com.zhy.android.percent.support.PercentLinearLayout>