<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <com.zhy.android.percent.support.PercentRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_marginTopPercent="1.51%w"
        app:layout_marginBottomPercent="1.51%w">
        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/sWechatVideoOtherAvatarIv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_heightPercent="11.21%w"
            app:layout_widthPercent="11.21%w"
            app:layout_marginLeftPercent="2.16%w"
            app:layout_marginRightPercent="1.67%w"
            android:src="@drawable/head_default"
            android:scaleType="centerCrop"
            app:riv_corner_radius="5dp"/>
        <com.zhy.android.percent.support.PercentLinearLayout
            android:id="@+id/layout1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/sWechatVideoOtherAvatarIv"
            android:layout_alignTop="@+id/sWechatVideoOtherAvatarIv"
            android:orientation="vertical">
            <TextView
                android:id="@+id/sWechatNickNameTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="啦啦啦"
                android:textSize="12sp"
                android:paddingBottom="2dp"
                android:paddingLeft="4dp"
                android:textColor="@color/wechatLightGray"
                android:visibility="gone"/>
            <com.zhy.android.percent.support.PercentRelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:id="@+id/mWechatVoiceOtherLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/wechat_text_other"
                    android:layout_toRightOf="@+id/sWechatVideoOtherAvatarIv"
                    android:layout_alignTop="@+id/sWechatVideoOtherAvatarIv"
                    android:layout_alignBottom="@+id/sWechatVideoOtherAvatarIv"
                    android:gravity="center_vertical|left">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/wechat_video_other"/>
                    <TextView
                        android:id="@+id/sWechatVideoOtherMsgTv"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="02:00"
                        android:textColor="@color/black"
                        android:gravity="center"
                        android:paddingLeft="@dimen/normalPaddingHalf"
                        android:textSize="17sp"/>
                </LinearLayout>
                <ImageView
                    android:id="@+id/sWechatVoiceOtherAlreadyIv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/red_point"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/normalPaddingHalf"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/mWechatVoiceMyLayout"
                    android:layout_alignTop="@+id/sWechatVideoOtherAvatarIv"
                    android:layout_alignBottom="@+id/sWechatVideoOtherAvatarIv"
                    android:layout_toRightOf="@+id/mWechatVoiceOtherLayout"/>

            </com.zhy.android.percent.support.PercentRelativeLayout>
        </com.zhy.android.percent.support.PercentLinearLayout>

    </com.zhy.android.percent.support.PercentRelativeLayout>
</com.zhy.android.percent.support.PercentRelativeLayout>