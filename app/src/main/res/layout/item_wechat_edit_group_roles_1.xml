<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginRight="@dimen/normalPadding"
    android:gravity="center"
    android:background="@color/white"
    android:paddingTop="10dp">

    <ImageView
        android:id="@+id/sWechatGroupRolesAvatarIv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/head_default"
        android:adjustViewBounds="true"/>
    <TextView
        android:id="@+id/sWechatGroupRolesNickNameTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="小明"
        android:layout_below="@+id/sWechatGroupRolesAvatarIv"
        android:layout_alignLeft="@+id/sWechatGroupRolesAvatarIv"
        android:layout_alignRight="@+id/sWechatGroupRolesAvatarIv"
        android:lines="1"
        android:ellipsize="end"
        android:gravity="center_horizontal"
        android:textColor="@color/wechatLightGray"
        android:layout_marginTop="@dimen/normalPadding"/>
</com.zhy.android.percent.support.PercentRelativeLayout>