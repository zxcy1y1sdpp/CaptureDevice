<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:layout_gravity="center_horizontal">

    <include
        android:id="@+id/titleLayout"
        layout="@layout/include_base_overall_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <app.jietuqi.cn.widget.OverScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/titleLayout">

        <com.zhy.android.percent.support.PercentRelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/mOverallLoginAccountSmsCodeTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="账号密码登录"
                android:textColor="@color/white"
                android:textSize="@dimen/overall26px"
                android:layout_alignParentRight="true"
                android:padding="@dimen/normalPadding"
                android:visibility="gone"/>

            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/mOverallLoginAccountAvatarIv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/app_icon"
                app:layout_heightPercent="16.5%w"
                app:layout_widthPercent="16.5%w"
                app:riv_corner_radius="10dp"
                android:scaleType="centerCrop"
                android:layout_centerHorizontal="true"
                app:layout_marginLeftPercent="4.26%w"
                app:layout_marginRightPercent="3.27%w"
                app:layout_marginTopPercent="5%w"
                app:layout_marginBottomPercent="6.3%w"
                app:riv_border_width="1dp"
                app:riv_border_color="#55DCDCDC"/>
            <EditText
                android:id="@+id/mOverallLoginAccountEt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="请输入手机号"
                android:paddingLeft="@dimen/normalPadding2"
                android:background="@drawable/gray_login_edittext"
                android:layout_centerHorizontal="true"
                android:textColor="@color/overallGray"
                android:textColorHint="@color/overallGray"
                android:layout_below="@+id/mOverallLoginAccountAvatarIv"
                app:layout_marginLeftPercent="10%w"
                app:layout_marginRightPercent="10%w"
                android:textSize="@dimen/normal_text_size"
                android:maxLength="11"
                android:inputType="number" />

            <RelativeLayout
                android:id="@+id/mOverallLoginPasswordLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/mOverallLoginAccountEt"
                app:layout_marginLeftPercent="10%w"
                app:layout_marginRightPercent="10%w"
                android:layout_marginTop="@dimen/normalPadding">
                <app.jietuqi.cn.widget.LastInputEditText
                    android:id="@+id/mOverallLoginPasswordEt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/gray_login_edittext"
                    android:hint="请输入密码"
                    android:paddingLeft="@dimen/normalPadding2"
                    android:textColor="@color/overallGray"
                    android:textColorHint="@color/overallGray"
                    android:textSize="@dimen/normal_text_size"
                    android:inputType="textPassword"/>
                <ImageView
                    android:id="@+id/mOverallLoginShowPasswordIv"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@drawable/password_hide"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/normalPadding2"
                    android:layout_centerVertical="true"
                    android:tag="false"/>
            </RelativeLayout>


            <LinearLayout
                android:id="@+id/mOverallLoginUserAgreementLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/mOverallLoginPasswordLayout"
                android:layout_marginTop="@dimen/normalPadding2"
                android:layout_marginBottom="@dimen/normalPadding2"
                android:layout_centerHorizontal="true">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="登录即表示您同意"
                    android:layout_below="@+id/layout2"
                    android:textColor="@color/black"
                    app:layout_marginTopPercent="5.8%w"
                    app:layout_marginBottomPercent="8.8%w"
                    android:layout_centerHorizontal="true"
                    android:textSize="@dimen/overall24px"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="《微商营销宝用户许可协议》"
                    android:layout_below="@+id/layout2"
                    android:textColor="@color/overallBlue"
                    app:layout_marginTopPercent="5.8%w"
                    app:layout_marginBottomPercent="8.8%w"
                    android:layout_centerHorizontal="true"
                    android:textSize="@dimen/overall24px" />
            </LinearLayout>

            <TextView
                android:id="@+id/mOverallLoginBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="账号登录"
                android:textColor="@color/white"
                android:layout_below="@+id/mOverallLoginUserAgreementLayout"
                android:textSize="@dimen/wechat17"
                android:background="@drawable/blue_solid_login_btn_2"
                android:layout_alignLeft="@+id/mOverallLoginAccountEt"
                android:layout_alignRight="@+id/mOverallLoginAccountEt"
                android:gravity="center"/>
            <TextView
                android:id="@+id/mOverallLoginSignInTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="注册账号"
                android:textColor="@color/overallBlue"
                android:layout_below="@+id/mOverallLoginBtn"
                android:background="@drawable/blue_solid_login_btn2"
                android:layout_alignLeft="@+id/mOverallLoginAccountEt"
                android:layout_alignRight="@+id/mOverallLoginAccountEt"
                android:textSize="@dimen/wechat17"
                android:gravity="center"
                android:layout_marginTop="@dimen/normalPadding2"/>

            <TextView
                android:id="@+id/mOverallLoginForgetPasswordIv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="已有账号，忘记密码"
                android:textColor="@color/overallGray"
                android:layout_below="@+id/mOverallLoginSignInTv"
                android:layout_centerHorizontal="true"
                android:padding="@dimen/normalPadding"/>

            <RelativeLayout
                android:id="@+id/layout1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/mOverallLoginForgetPasswordIv"
                android:layout_alignLeft="@+id/mOverallLoginAccountEt"
                android:layout_alignRight="@+id/mOverallLoginAccountEt"
                android:layout_marginTop="@dimen/normalPadding">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/wechatLineNarrow"
                    android:background="@color/overallGray"
                    android:layout_toLeftOf="@+id/view2"
                    android:layout_centerVertical="true"/>

                <TextView
                    android:id="@+id/view2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="第三方账号登录"
                    android:textColor="@color/overallGray"
                    android:textSize="@dimen/overall26px"
                    android:layout_marginLeft="@dimen/normalPadding"
                    android:layout_marginRight="@dimen/normalPadding"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/wechatLineNarrow"
                    android:background="@color/overallGray"
                    android:layout_toRightOf="@+id/view2"
                    android:layout_centerVertical="true"/>
            </RelativeLayout>
            <com.zhy.android.percent.support.PercentLinearLayout
                android:id="@+id/layout2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                app:layout_marginTopPercent="5%w"
                android:layout_below="@+id/layout1">
                <ImageView
                    android:id="@+id/mOverallLoginWechatIv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/login_wechat"
                    app:layout_marginRightPercent="18.13%w"/>
                <ImageView
                    android:id="@+id/mOverallLoginQQIv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/login_qq"/>
            </com.zhy.android.percent.support.PercentLinearLayout>

        </com.zhy.android.percent.support.PercentRelativeLayout>
    </app.jietuqi.cn.widget.OverScrollView>

</com.zhy.android.percent.support.PercentRelativeLayout>