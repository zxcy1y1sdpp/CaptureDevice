<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentLinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/wechatBg">
    <include
        layout="@layout/base_wechat_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <com.zhy.android.percent.support.PercentRelativeLayout
        android:id="@+id/mSelectAvatarLayout"
        android:layout_below="@+id/titleLayout"
        style="@style/wechatItem"
        android:layout_marginTop="@dimen/littleModuleSpace">
        <TextView
            android:text="头像"
            style="@style/wechatLeftTitle"/>
        <ImageView
            android:id="@+id/mUserAvatarIv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/head_default"
            android:layout_toLeftOf="@+id/tagIv"
            android:layout_centerVertical="true"
            android:adjustViewBounds="true"
            app:layout_heightPercent="85%h"
            app:layout_widthPercent="85%h"
            android:scaleType="centerCrop"/>

        <ImageView
            android:id="@+id/tagIv"
            style="@style/wechatRightArrow"/>
    </com.zhy.android.percent.support.PercentRelativeLayout>

    <RelativeLayout
        style="@style/wechatItem"
        android:focusable="true"
        android:focusableInTouchMode="true" >
        <EditText
            android:id="@+id/mNickNameEt"
            android:hint="昵称"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            style="@style/wechatEdit"
            android:textColorHint="@color/wechat_deep3_text_color"
            android:layout_toLeftOf="@+id/mAlipayCreateMyRefreshIv"
            android:gravity="center_vertical"
            android:layout_marginRight="@dimen/normalPadding"
            android:layout_toRightOf="@+id/view1"
            android:layout_centerVertical="true"/>

        <ImageView
            android:id="@+id/mNickNameRefreshIv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/wechat_refresh"
            android:padding="@dimen/normalPadding"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"/>
    </RelativeLayout>
    <RelativeLayout
        style="@style/wechatItem"
        android:focusable="true"
        android:focusableInTouchMode="true">
        <EditText
            android:id="@+id/mMsgEt"
            android:hint="请输入验证信息"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            style="@style/wechatEdit"
            android:textColorHint="@color/wechat_deep3_text_color"
            android:layout_toLeftOf="@+id/mAlipayCreateMyRefreshIv"
            android:gravity="center_vertical"
            android:layout_marginRight="@dimen/normalPadding"
            android:layout_toRightOf="@+id/view1"
            android:layout_centerVertical="true"/>

        <ImageView
            android:id="@+id/mMsgRefreshIv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/wechat_refresh"
            android:padding="@dimen/normalPadding"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"/>
    </RelativeLayout>
    <RelativeLayout
        style="@style/wechatItem">
        <TextView
            style="@style/wechatLeftTitle"
            android:text="是否已添加为好友"/>

        <ImageView
            android:id="@+id/mAlreadyFriendIv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@mipmap/off"
            android:layout_alignParentRight="true"/>

    </RelativeLayout>

    <Button
        android:id="@+id/mConfirmEditBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_heightPercent="13%w"
        android:text="修改完成"
        android:textColor="@color/white"
        android:layout_margin="@dimen/normalPadding"
        android:background="@drawable/blue_round_cornor"
        style="@style/wechatTextSameSize"
        android:padding="@dimen/normalPadding"
        android:layout_alignParentBottom="true"/>
    <Button
        android:id="@+id/mCleanItemBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_heightPercent="13%w"
        android:text="删除"
        android:textColor="@color/white"
        android:layout_marginLeft="@dimen/normalPadding"
        android:layout_marginRight="@dimen/normalPadding"
        android:background="@drawable/red_round_cornor"
        style="@style/wechatTextSameSize"
        android:padding="@dimen/normalPadding"
        android:layout_alignParentBottom="true"/>
</com.zhy.android.percent.support.PercentLinearLayout>