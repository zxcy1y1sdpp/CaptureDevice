<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/normalPadding"
    android:background="@color/white">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/normalPadding"
        android:text="选择对话类型"
        android:textColor="@color/overallGray"
        android:textSize="@dimen/overall16sp"
        android:gravity="center"
        android:background="@color/white"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/wechatLineNarrow"
        android:background="@color/overallBg"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_marginTop="@dimen/normalPadding">
        <TextView
            android:id="@+id/dialogChoiceTalkTimeTv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="时间"
            android:layout_weight="1"
            android:textColor="@color/black"
            android:gravity="center"
            android:drawableTop="@drawable/dialog_time"
            android:drawablePadding="@dimen/normalPadding"/>
        <TextView
            android:id="@+id/dialogChoiceTalkTextTv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="文本"
            android:layout_weight="1"
            android:textColor="@color/black"
            android:gravity="center"
            android:drawableTop="@drawable/dialog_text"
            android:drawablePadding="@dimen/normalPadding"/>
        <TextView
            android:id="@+id/dialogChoiceTalkPictureAndVideoTv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="图片"
            android:layout_weight="1"
            android:textColor="@color/black"
            android:gravity="center"
            android:drawableTop="@drawable/dialog_picture"
            android:drawablePadding="@dimen/normalPadding"/>
        <TextView
            android:id="@+id/dialogChoiceVoiceTv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="语音"
            android:layout_weight="1"
            android:textColor="@color/black"
            android:gravity="center"
            android:drawableTop="@drawable/dialog_voice"
            android:drawablePadding="@dimen/normalPadding"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_marginTop="@dimen/normalPadding">

        <TextView
            android:id="@+id/dialogChoiceTalkRedPacketTv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="红包"
            android:textColor="@color/black"
            android:gravity="center"
            android:drawableTop="@drawable/dialog_red_packet"
            android:drawablePadding="@dimen/normalPadding"/>
        <TextView
            android:id="@+id/dialogChoiceTalkTransferTv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="转账"
            android:textColor="@color/black"
            android:gravity="center"
            android:drawableTop="@drawable/dialog_transfer"
            android:drawablePadding="@dimen/normalPadding"/>
        <TextView
            android:id="@+id/dialogChoiceTalkSystemTv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="系统"
            android:layout_weight="1"
            android:textColor="@color/black"
            android:gravity="center"
            android:drawableTop="@drawable/dialog_system"
            android:drawablePadding="@dimen/normalPadding"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="转账"
            android:layout_weight="1"
            android:textColor="@color/black"
            android:gravity="center"
            android:drawableTop="@drawable/dialog_transfer"
            android:drawablePadding="@dimen/normalPadding"
            android:visibility="invisible"/>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/wechatLineNarrow"
        android:background="@color/overallBg"
        android:layout_marginTop="@dimen/normalPadding"/>
    <TextView
        android:id="@+id/dialogChoiceTalkCancelTv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/normalPadding"
        android:text="取消"
        android:textColor="@color/overallGray"
        android:textSize="@dimen/overall16sp"
        android:gravity="center"
        android:background="@color/white"/>
</LinearLayout>
