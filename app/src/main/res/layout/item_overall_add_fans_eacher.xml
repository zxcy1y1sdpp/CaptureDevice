<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:foreground="?android:attr/selectableItemBackground">
    <com.zhy.android.percent.support.PercentRelativeLayout
        android:id="@+id/layout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/sOverallAddFansEachOtherAvatarIv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/head_default"
            app:layout_heightPercent="12%w"
            app:layout_widthPercent="12%w"
            app:layout_marginLeftPercent="3.46%w"
            app:layout_marginTopPercent="2.8%w"
            app:layout_marginBottomPercent="2.8%w"
            app:riv_border_color="@color/wechatPreviewTitle"
            app:riv_corner_radius="5dp"
            android:scaleType="centerCrop"
            android:layout_centerVertical="true"
            app:layout_marginRightPercent="3.27%w"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_toRightOf="@+id/sOverallAddFansEachOtherAvatarIv"
            android:layout_toLeftOf="@+id/sOverallMakeFriendsBgView"
            android:layout_centerVertical="true">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                app:layout_marginRightPercent="8.77%w">
                <ImageView
                    android:id="@+id/sOverallAddFansEachOtherTopIv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/zhiding"
                    android:layout_marginRight="3dp"
                    android:visibility="gone"/>
                <TextView
                    android:id="@+id/sOverallAddFansEachOtherNickNameTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="世纪东方"
                    android:lines="1"
                    android:ellipsize="end"
                    android:textSize="@dimen/overall16sp"
                    android:textColor="@color/black"/>
            </LinearLayout>
            <TextView
                android:id="@+id/sOverallAddFansEachOtherContentTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="离开家"
                android:lines="1"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:textColor="@color/overallGray"
                android:textSize="@dimen/overall26px"/>
        </LinearLayout>


        <app.jietuqi.cn.widget.ShapeCornerBgView
            android:id="@+id/sOverallMakeFriendsBgView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_widthPercent="16.53%w"
            app:layout_heightPercent="8.26%w"
            android:text="加好友"
            android:textColor="#ffffff"
            app:appBgColor="#F95645"
            app:appRadius="5dp"
            android:gravity="center"
            app:layout_marginLeftPercent="3.46%w"
            app:layout_marginRightPercent="3.46%w"
            app:layout_marginTopPercent="5.1%w"
            app:layout_marginBottomPercent="5.1%w"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"/>

    </com.zhy.android.percent.support.PercentRelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/wechatLineNarrow"
        android:background="@color/overallBg"
        android:layout_below="@+id/layout1"/>
</com.zhy.android.percent.support.PercentRelativeLayout>