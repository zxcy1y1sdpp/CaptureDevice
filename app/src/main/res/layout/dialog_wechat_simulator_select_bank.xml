<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentLinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <com.zhy.android.percent.support.PercentLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/corner_top_linear"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_marginLeftPercent="6.88%w"
            app:layout_marginTopPercent="5.38%w"
            app:layout_marginBottomPercent="5.38%w"
            android:gravity="center_vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="选择充值银行卡"
                android:textColor="@color/black"
                android:gravity="center_vertical"
                android:textSize="19sp"/>

            <TextView
                android:id="@+id/dialogReachTimeTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="请留意各银行到账时间"
                android:textSize="13sp"
                android:textColor="@color/wechatLightGray"
                android:layout_marginTop="@dimen/normalPaddingHalf"
                android:visibility="gone"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/Line"
            android:background="@color/wechatLine"/>
    </com.zhy.android.percent.support.PercentLinearLayout>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/dialogRv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layoutManager="android.support.v7.widget.LinearLayoutManager"/>


</com.zhy.android.percent.support.PercentLinearLayout>
