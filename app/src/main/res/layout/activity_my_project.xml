<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentLinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/overallBg">
    <include layout="@layout/include_base_overall_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <com.zhy.android.percent.support.PercentRelativeLayout
        android:id="@+id/mMyProjectLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_heightPercent="11.73%w"
        android:background="@drawable/layout_water_selector"
        app:layout_marginTopPercent="4%w">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/Line"
            android:background="@color/overallLine"/>
        <ImageView
            android:id="@+id/tagView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/project_my_publish"
            android:layout_centerVertical="true"
            app:layout_marginLeftPercent="3.73%w"
            app:layout_widthPercent="5.1%w"
            app:layout_heightPercent="5.1%w"
            app:layout_marginRightPercent="4.53%w"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="发布的项目"
            android:layout_toRightOf="@+id/tagView"
            android:layout_centerVertical="true"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/right_arrow"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            app:layout_marginRightPercent="4.27%w"/>
    </com.zhy.android.percent.support.PercentRelativeLayout>
    <com.zhy.android.percent.support.PercentRelativeLayout
        android:id="@+id/mMyCollectLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_heightPercent="11.73%w"
        android:background="@drawable/layout_water_selector">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/Line"
            android:background="@color/overallLine"/>
        <ImageView
            android:id="@+id/tagView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/project_my_collecttion"
            android:layout_centerVertical="true"
            app:layout_marginLeftPercent="3.73%w"
            app:layout_widthPercent="5.1%w"
            app:layout_heightPercent="5.1%w"
            app:layout_marginRightPercent="4.53%w"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="收藏的项目"
            android:layout_toRightOf="@+id/tagView1"
            android:layout_centerVertical="true"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/right_arrow"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            app:layout_marginRightPercent="4.27%w"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/Line"
            android:background="@color/overallLine"
            android:layout_alignParentBottom="true"/>
    </com.zhy.android.percent.support.PercentRelativeLayout>

    <com.zhy.android.percent.support.PercentRelativeLayout
        android:id="@+id/mProblemLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_heightPercent="11.73%w"
        android:background="@drawable/layout_water_selector"
        app:layout_marginTopPercent="5.3%w"
        android:visibility="gone">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/Line"
            android:background="@color/overallLine"/>
        <ImageView
            android:id="@+id/tagView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/project_my_problem"
            android:layout_centerVertical="true"
            app:layout_marginLeftPercent="3.73%w"
            app:layout_widthPercent="5.1%w"
            app:layout_heightPercent="5.1%w"
            app:layout_marginRightPercent="4.53%w"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="常见问题"
            android:layout_toRightOf="@+id/tagView2"
            android:layout_centerVertical="true"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/right_arrow"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            app:layout_marginRightPercent="4.27%w"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/Line"
            android:background="@color/overallLine"
            android:layout_alignParentBottom="true"/>
    </com.zhy.android.percent.support.PercentRelativeLayout>
</com.zhy.android.percent.support.PercentLinearLayout>