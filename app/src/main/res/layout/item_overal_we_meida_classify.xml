<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/normalPadding"
    android:paddingTop="@dimen/normalPadding">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/corner_we_media_item">
        <TextView
            android:id="@+id/sTitleTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="信号超级垂直宠物，6w5活粉，33W赞"
            android:gravity="center"
            android:maxLines="2"
            android:ellipsize="end"
            android:layout_marginLeft="@dimen/normalPadding"
            android:layout_marginRight="@dimen/normalPadding"
            android:layout_marginTop="@dimen/normalPadding"
            android:lines="2"
            android:includeFontPadding="false"/>

        <TextView
            android:id="@+id/sClassifyTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="所属类目：情感杂志"
            android:layout_below="@+id/sTitleTv"
            android:textColor="@color/wechatLightGray"
            android:layout_marginTop="@dimen/normalPaddingHalf"
            android:layout_marginLeft="@dimen/normalPadding"
            android:textSize="13sp"
            android:includeFontPadding="false"/>

        <LinearLayout
            android:id="@+id/layout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_below="@+id/sClassifyTv"
            android:layout_marginTop="@dimen/normalPaddingHalf"
            android:layout_marginLeft="@dimen/normalPadding">
            <ImageView
                android:id="@+id/sClassIconIv"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/default_bg"/>

            <TextView
                android:id="@+id/sAccountTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3452547"
                android:layout_marginLeft="@dimen/normalPadding"
                android:textColor="@color/wechatLightGray"
                android:textSize="13sp"
                android:includeFontPadding="false"/>
        </LinearLayout>

        <View
            android:id="@+id/line1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/Line"
            android:background="@color/colorWhite"
            android:layout_below="@+id/layout1"
            android:layout_marginTop="@dimen/normalPaddingHalf"
            android:layout_marginBottom="@dimen/normalPaddingHalf"/>

        <RelativeLayout
            android:id="@+id/layout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/line1"
            android:layout_marginLeft="@dimen/normalPadding"
            android:layout_marginRight="@dimen/normalPadding">
            <TextView
                android:id="@+id/sHitCountTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="33W+"
                android:includeFontPadding="false"/>

            <TextView
                android:id="@+id/sHitCountTitleTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="点击量"
                android:textSize="13sp"
                android:textColor="@color/wechatLightGray"
                android:layout_below="@+id/sHitCountTv"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="@dimen/normalPadding"
                android:includeFontPadding="false"/>

            <TextView
                android:id="@+id/sCertificationStatusTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="未认证"
                android:layout_alignParentRight="true"
                android:gravity="right"
                android:includeFontPadding="false"/>

            <TextView
                android:id="@+id/tagView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="认证状态"
                android:layout_below="@+id/sCertificationStatusTv"
                android:layout_alignParentRight="true"
                android:gravity="right"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="@dimen/normalPadding"
                android:textSize="13sp"
                android:textColor="@color/wechatLightGray"
                android:includeFontPadding="false"/>

            <TextView
                android:id="@+id/sFansCountTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="33W+"
                android:layout_below="@+id/sHitCountTitleTv"
                android:includeFontPadding="false"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="粉丝数量"
                android:textSize="13sp"
                android:layout_below="@+id/sFansCountTv"
                android:layout_marginTop="5dp"
                android:textColor="@color/wechatLightGray"
                android:includeFontPadding="false"/>
            <TextView
                android:id="@+id/sFansFavourTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="33W+"
                android:layout_below="@+id/tagView2"
                android:layout_alignParentRight="true"
                android:includeFontPadding="false"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="粉丝偏向"
                android:textSize="13sp"
                android:layout_below="@+id/sFansCountTv"
                android:layout_marginTop="5dp"
                android:layout_alignParentRight="true"
                android:textColor="@color/wechatLightGray"
                android:includeFontPadding="false"/>
        </RelativeLayout>

        <View
            android:id="@+id/line2"
            android:layout_width="match_parent"
            android:layout_height="@dimen/Line"
            android:background="@color/colorWhite"
            android:layout_below="@+id/layout2"
            android:layout_marginTop="@dimen/normalPaddingHalf"/>

        <TextView
            android:id="@+id/sPriceTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="¥5555.00"
            android:layout_below="@+id/line2"
            android:textColor="@color/overallRed"
            android:padding="@dimen/normalPadding"
            android:includeFontPadding="false"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="查看详情"
            android:layout_below="@+id/line2"
            android:textColor="@color/wechatDeepGray"
            android:padding="@dimen/normalPadding"
            android:layout_alignParentRight="true"
            android:textSize="13sp"
            android:includeFontPadding="false"/>

    </RelativeLayout>

</LinearLayout>