<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentLinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="horizontal">

    <com.zhy.android.percent.support.PercentRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/wechatSystemTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/wechatLightGray"
            android:textSize="14sp"
            android:background="@drawable/gray_round_cornor"
            app:layout_marginTopPercent="1.63%w"
            app:layout_marginBottomPercent="1.63%w"
            app:layout_marginLeftPercent="7.32%w"
            app:layout_marginRightPercent="7.32%w"
            android:gravity="left|center_horizontal"
            android:layout_centerHorizontal="true"/>
    </com.zhy.android.percent.support.PercentRelativeLayout>


</com.zhy.android.percent.support.PercentLinearLayout>
