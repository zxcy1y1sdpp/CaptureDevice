<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentLinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/overallBg">

    <include
        layout="@layout/include_base_overall_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="选择问题类型"
        android:padding="@dimen/normalPadding"
        android:background="@color/white"
        android:textColor="@color/overallTextColor"
        android:textSize="@dimen/overall24px"
        app:layout_marginTopPercent="4%w"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="@dimen/normalPadding"
        android:layout_marginTop="@dimen/wechatLineNarrow">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center">
            <TextView
                android:id="@+id/mFunProblemTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="功能反馈"
                android:background="@drawable/blue_solid1"
                android:textColor="@color/wechatBlue"
                android:textSize="@dimen/overall26px"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center">
            <TextView
                android:id="@+id/mSuggestionTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="意见反馈"
                android:background="@drawable/gray_solid1"
                android:textColor="@color/overallGray"
                android:textSize="@dimen/overall26px"/>
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="描述您的问题"
        android:padding="@dimen/normalPadding"
        android:background="@color/white"
        android:textColor="@color/overallTextColor"
        android:textSize="@dimen/overall24px"
        android:layout_marginTop="@dimen/normalPadding"/>

    <com.zhy.android.percent.support.PercentLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_heightPercent="24%w"
            android:background="@color/white"
            android:padding="@dimen/normalPadding"
            android:hint="请输入您的意见或建议"
            android:textColorHint="@color/overallGray"
            android:textColor="@color/overallGray"
            android:gravity="top"
            android:textSize="@dimen/overall26px"/>
    </com.zhy.android.percent.support.PercentLinearLayout>

    <com.zhy.android.percent.support.PercentLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_heightPercent="26%w"
        android:background="@color/white">
        <android.support.v7.widget.RecyclerView
            android:id="@+id/mRecyclerView"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            app:layoutManager="android.support.v7.widget.LinearLayoutManager"
            android:orientation="horizontal"
            android:background="@color/white"
            app:layout_marginLeftPercent="7%w"/>

        <!--<RelativeLayout
            android:id="@+id/mSelectPicsLayout"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:clipChildren="false">-->

            <ImageView
                android:id="@+id/mSelectPicsIv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/add_pics"
                android:scaleType="centerCrop"
                android:adjustViewBounds="true"
                android:background="#000000"
                android:layout_marginTop="7dp"
                android:layout_marginLeft="7dp"/>

           <!-- <ImageView
                android:id="@+id/deleteIv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/shanchu"/>-->
        <!--</RelativeLayout>-->
    </com.zhy.android.percent.support.PercentLinearLayout>

<!--

        android:padding="@dimen/normalPadding"
        android:clipToPadding="true"-->
    <com.zhy.android.percent.support.PercentLinearLayout
        style="@style/overallMyItem"
        android:layout_marginBottom="50dp">
        <TextView
            android:text="联系方式："
            style="@style/overallLeftTitle"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="手机/微信/QQ，方便客服和您联系"
            android:background="@null"
            android:textSize="@dimen/overall26px"
            android:paddingLeft="@dimen/normalPadding"/>
    </com.zhy.android.percent.support.PercentLinearLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="提交"
        android:textSize="@dimen/overallNormal1"
        android:textColor="@color/white"
        android:background="@drawable/blue_round_cornor"
        android:padding="10dp"
        android:gravity="center"
        android:layout_margin="@dimen/normalPadding"/>
</com.zhy.android.percent.support.PercentLinearLayout>