<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentLinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/overallBg">

    <include
        layout="@layout/include_base_overall_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="选择问题类型"
        android:padding="@dimen/normalPadding"
        android:background="@color/white"
        android:textColor="@color/overallTextColor"
        android:textSize="@dimen/overall24px"
        app:layout_marginTopPercent="4%w"/>

    <LinearLayout
        android:id="@+id/mOverallReportProblemTypeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="@dimen/normalPadding"
        android:layout_marginTop="@dimen/wechatLineNarrow"
        android:baselineAligned="false"
        android:tag="gongneng">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center">
            <TextView
                android:id="@+id/mFunProblemTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="功能反馈"
                android:background="@drawable/blue_solid1"
                android:textColor="@color/wechatBlue"
                android:textSize="@dimen/overall26px"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center">
            <TextView
                android:id="@+id/mSuggestionTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="意见反馈"
                android:background="@drawable/gray_solid1"
                android:textColor="@color/overallGray"
                android:textSize="@dimen/overall26px"/>
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="描述您的问题"
        android:padding="@dimen/normalPadding"
        android:background="@color/white"
        android:textColor="@color/overallTextColor"
        android:textSize="@dimen/overall24px"
        android:layout_marginTop="@dimen/normalPadding"/>

    <com.zhy.android.percent.support.PercentLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/mOverallReportProblemEt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_heightPercent="24%w"
            android:background="@color/white"
            android:padding="@dimen/normalPadding"
            android:hint="请输入您的意见或建议"
            android:textColorHint="@color/overallGray"
            android:textColor="@color/overallGray"
            android:gravity="top"
            android:textSize="@dimen/overall26px"/>
    </com.zhy.android.percent.support.PercentLinearLayout>

    <com.zhy.android.percent.support.PercentLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_heightPercent="26%w"
        android:background="@color/white">
        <android.support.v7.widget.RecyclerView
            android:id="@+id/mRecyclerView"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            app:layoutManager="android.support.v7.widget.LinearLayoutManager"
            android:orientation="horizontal"
            android:background="@color/white"
            android:layout_marginLeft="@dimen/normalPadding"/>

        <ImageView
            android:id="@+id/mSelectPicsIv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/add_more_pics"
            android:scaleType="centerCrop"
            android:adjustViewBounds="true"
            android:layout_marginTop="7dp"
            android:layout_marginLeft="7dp"/>
    </com.zhy.android.percent.support.PercentLinearLayout>

    <com.zhy.android.percent.support.PercentLinearLayout
        style="@style/overallMyItem"
        android:layout_marginBottom="50dp">
        <TextView
            android:id="@+id/titleTv"
            android:text="选择类型"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/normalPadding"/>

        <TextView
            android:id="@+id/mWechatTv"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:text="微信"
            android:background="@drawable/report_problem1"
            android:textColor="@color/white"
            android:layout_toRightOf="@+id/titleTv"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/normalPadding"
            android:gravity="center"
            android:textSize="12sp"/>
        <TextView
            android:id="@+id/mQQTv"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="QQ"
            android:background="@drawable/report_problem2"
            android:textSize="12sp"
            android:textColor="@color/wechatBlue"
            android:layout_toRightOf="@+id/mRecivePacketTv"/>
        <EditText
            android:id="@+id/mOverallReportProblemContactEt"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="微信/QQ，方便客服和您联系"
            android:background="@null"
            android:textSize="@dimen/overall26px"
            android:paddingLeft="@dimen/normalPadding"
            android:digits="@string/rule_text"/>

    </com.zhy.android.percent.support.PercentLinearLayout>

    <Button
        android:id="@+id/mOverallReportProblemSubmitBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="提交"
        android:textSize="@dimen/overall32px"
        android:textColor="@color/white"
        android:background="@drawable/blue_round_cornor"
        android:padding="10dp"
        android:gravity="center"
        android:layout_margin="@dimen/normalPadding"/>
</com.zhy.android.percent.support.PercentLinearLayout>