<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentLinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/wechatSimulatorBg">
    <com.zhy.android.percent.support.PercentLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center_vertical">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/search_new_friend"
            app:layout_heightPercent="8.9%w"
            app:layout_marginLeftPercent="3.2%w"
            app:layout_marginTopPercent="3.2%w"
            app:layout_marginBottomPercent="2.2%w"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="微信号/QQ号/手机号"
            app:layout_heightPercent="8.9%w"
            app:layout_marginLeftPercent="3.2%w"
            app:layout_marginTopPercent="3.2%w"
            app:layout_marginBottomPercent="2.2%w"
            android:gravity="center"
            android:textColor="@color/wechatLightGray"/>
    </com.zhy.android.percent.support.PercentLinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="新的朋友"
        android:textColor="@color/wechatLightGray"
        app:layout_heightPercent="9.78%w"
        android:gravity="bottom"
        app:layout_marginLeftPercent="3.2%w"
        android:textSize="13sp"
        android:paddingBottom="2dp"/>
</com.zhy.android.percent.support.PercentLinearLayout>