<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentLinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/overallBg">
    <include
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/include_base_overall_top_black"/>

    <include
        layout="@layout/include_choice_role"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <RelativeLayout
        style="@style/wechatItem">
        <TextView
            android:text="选择类型"
            style="@style/wechatLeftTitle"/>

        <TextView
            android:id="@+id/mWechatCreateVideoTv"
            android:text="视频"
            android:background="@drawable/blue_round_cornor"
            android:textColor="@color/white"
            android:layout_toLeftOf="@+id/mWechatCreateVoiceTv"
            style="@style/wechatTwoBtn" />
        <TextView
            android:id="@+id/mWechatCreateVoiceTv"
            android:text="语音"
            android:background="@drawable/blue_solid"
            android:textColor="@color/wechatBlue"
            android:layout_alignParentRight="true"
            style="@style/wechatTwoBtn"
            android:layout_marginLeft="@dimen/normalPadding"
            android:layout_marginRight="@dimen/normalPadding"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/mWechatCreateStatusLayout"
        style="@style/wechatItem">

        <TextView
            style="@style/wechatLeftTitle"
            android:text="通话状态" />

        <TextView
            android:id="@+id/mWechatCreateStatusTv"
            style="@style/wechatRightWithArrow"
            android:text="已接通" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/mWechatCreateTimeLayout"
        style="@style/wechatItem">

        <TextView
            style="@style/wechatLeftTitle"
            android:text="聊天时长" />

        <TextView
            android:id="@+id/mWechatCreateTimeTv"
            style="@style/wechatRightWithArrow"
            android:text="01:00" />
    </RelativeLayout>
</com.zhy.android.percent.support.PercentLinearLayout>