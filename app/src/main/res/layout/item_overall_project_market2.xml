<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/layout_water_selector">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/Line"
        android:background="@color/wechatLine"/>
    <com.zhy.android.percent.support.PercentRelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/sOverallProjectMarketPicIv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/loading"
            app:layout_widthPercent="22.13%w"
            app:layout_heightPercent="22.13%w"
            android:scaleType="centerCrop"
            app:layout_marginTopPercent="2.7%w"
            app:layout_marginBottomPercent="2.7%w"
            app:layout_marginLeftPercent="2.7%w"
            app:layout_marginRightPercent="2.7%w"/>

        <TextView
            android:id="@+id/sOverallProjectMarketTitleTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="制版儿童机器人，0元起诚招代理"
            android:layout_toRightOf="@+id/sOverallProjectMarketPicIv"
            android:layout_alignTop="@+id/sOverallProjectMarketPicIv"
            android:layout_toLeftOf="@+id/tagView"
            app:layout_marginRightPercent="4.27%w"
            android:textColor="#222222"
            android:lines="1"
            android:ellipsize="end"/>

        <com.coorchice.library.SuperTextView
            android:id="@+id/sOverallProjectMarketClassifyTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="bottom|center"
            app:stv_pressBgColor="@color/wechatLightGray"
            android:text="数码产品"
            android:textColor="@color/overallBlue"
            app:stv_corner="3dp"
            app:stv_solid="#E7EFFA"
            android:layout_marginTop="@dimen/normalPadding"
            android:layout_alignLeft="@+id/sOverallProjectMarketTitleTv"
            android:paddingLeft="3dp"
            android:paddingRight="3dp"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
            android:layout_centerVertical="true"
            android:textSize="12sp"/>

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/sOverallProjectMarketAvatarIv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/head_default"
            app:layout_heightPercent="5.87%w"
            app:layout_widthPercent="5.87%w"
            app:riv_border_color="@color/wechatPreviewTitle"
            app:riv_oval="true"
            app:riv_corner_radius="75dp"
            android:scaleType="centerCrop"
            app:layout_marginRightPercent="1.4%w"
            android:layout_alignLeft="@+id/sOverallProjectMarketTitleTv"
            android:layout_alignBottom="@+id/sOverallProjectMarketPicIv" />

        <TextView
            android:id="@+id/sOverallProjectMarketNickNameTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="小智伴读0元起诚招代理0元起诚招代理0元起诚招代理0元起诚招代理"
            android:layout_alignTop="@+id/sOverallProjectMarketAvatarIv"
            android:layout_alignBottom="@+id/sOverallProjectMarketAvatarIv"
            android:textSize="10sp"
            android:gravity="center_vertical"
            android:layout_toRightOf="@+id/sOverallProjectMarketAvatarIv"
            android:textColor="#A4A4A4"
            android:lines="1"
            android:ellipsize="end"
            android:layout_toLeftOf="@+id/tagView1" />

        <!--<ImageView
            android:id="@+id/tagView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            app:layout_marginRightPercent="4.27%w"
            android:src="@drawable/wechat_right_arrow" />-->

        <com.coorchice.library.SuperTextView
            android:id="@+id/tagView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/sOverallProjectMarketAvatarIv"
            android:layout_alignParentRight="true"
            android:gravity="bottom|center"
            android:paddingLeft="3dp"
            android:paddingTop="3dp"
            android:paddingRight="3dp"
            android:paddingBottom="3dp"
            android:text="查看项目"
            android:textColor="@color/white"
            android:textSize="14sp"
            app:layout_marginLeftPercent="1%w"
            app:layout_marginRightPercent="4.27%w"
            app:stv_corner="3dp"
            app:stv_solid="#4AA9EB" />
    </com.zhy.android.percent.support.PercentRelativeLayout>
</com.zhy.android.percent.support.PercentRelativeLayout>