<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/linear_dialog"
    android:layout_width="250dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:background="@drawable/bac_white_one">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="100dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_icon"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginRight="10dp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="微信号已复制，是否前往微信添加朋友"

                android:textColor="@color/sd_color_black"
                android:textSize="16sp"
                android:padding="@dimen/normalPadding"/>
        </LinearLayout>

        <TextView
            android:id="@+id/tv_sub_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="副标题或者描"
            android:textSize="14sp"
            android:paddingLeft="@dimen/normalPadding"
            android:paddingRight="@dimen/normalPadding"
            android:paddingBottom="@dimen/normalPadding"/>
    </LinearLayout>

    <View style="@style/ViewLineHorizontal" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp">

        <LinearLayout
            android:id="@+id/linear_bottom"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal">
            <com.coorchice.library.SuperTextView
                android:id="@+id/tv_cancel"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="取消"
                app:stv_corner="5dp"
                app:stv_left_bottom_corner="true"
                app:stv_pressBgColor="@color/pressColor"
                android:layout_gravity="center"
                android:textColor="@color/sd_color_black"
                android:textSize="16sp"
                android:padding="@dimen/normalPadding"
                android:gravity="center"
                app:stv_solid="@color/white"/>
            <!--<TextView
                android:id="@+id/tv_cancel"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="取消"
                android:textSize="16sp" />-->

            <View style="@style/ViewLineVertical" />
            <com.coorchice.library.SuperTextView
                android:id="@+id/tv_sure"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="确认"
                app:stv_corner="5dp"
                app:stv_right_bottom_corner="true"
                app:stv_pressBgColor="@color/pressColor"
                android:layout_gravity="center"
                android:textColor="@color/sd_color_black"
                android:textSize="16sp"
                android:padding="@dimen/normalPadding"
                android:gravity="center"
                app:stv_solid="@color/white"/>
           <!-- <TextView
                android:id="@+id/tv_sure"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="确认"
                android:textSize="16sp" />-->
        </LinearLayout>

        <TextView
            android:id="@+id/tv_ok"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="确认"
            android:textSize="16sp"
            android:visibility="gone"/>
    </RelativeLayout>

</LinearLayout>