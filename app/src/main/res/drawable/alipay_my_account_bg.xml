<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- 设置透明背景色 -->
    <solid android:color="#318CD3" />

    <!-- 设置一个黑色边框 -->
    <stroke
        android:width="0.5dp"
        android:color="#469fe5" />
    <!-- 设置四个圆角的半径 -->
    <corners
        android:radius="50px"/>
    <!-- 设置一下边距,让空间大一点 -->
    <padding
        android:bottom="2.5dp"
        android:left="10dp"
        android:right="10dp"
        android:top="2.5dp" />

</shape>