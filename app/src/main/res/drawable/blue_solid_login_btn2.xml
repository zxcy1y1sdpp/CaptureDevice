<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- 设置透明背景色 -->
    <solid android:color="@color/white" />

    <!-- 设置一个黑色边框 -->
    <stroke
        android:width="0.5dp"
        android:color="@color/wechatBlue" />
    <!-- 设置四个圆角的半径 -->
    <corners android:radius="30dp" />
    <!-- 设置一下边距,让空间大一点 -->
    <padding
        android:left="@dimen/normalPadding"
        android:right="@dimen/normalPadding"
        android:bottom="@dimen/normalPadding"
        android:top="@dimen/normalPadding"/>

</shape>